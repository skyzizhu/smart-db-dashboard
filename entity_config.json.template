      "产品表": "your_actual_product_table_name",
      "日志表": "your_actual_log_table_name"
    },

    "_examples_from_real_project": {
      "用户相关": {
        "用户表": "tb_users",
        "注册表": "tb_users",
        "会员表": "tb_users"
      },
      "订单相关": {
        "订单表": "tb_orders",
        "销售表": "tb_orders"
      }
    }
  },

  "time_field_mappings": {
    "_comment": "指定每个表应该使用的时间字段",
    "_description": "用于时间范围查询和排序，如'最近7天的数据'",
    "_important": "如果不配置，系统会自动尝试匹配包含time/date的字段",

    "_example": {
      "your_user_table": "created_at",
      "your_order_table": "order_time"
    }
  },

  "custom_query_patterns": {
    "_comment": "自定义查询模式（可选）",
